{
  // "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "ES2021"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2021",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}

